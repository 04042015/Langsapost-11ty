{% extends "layouts/base.njk" %}

{% block content %}
  <h1>Kategori: Healthy</h1>
  {% if collections.healthy.length %}
    <ul>
    {% for post in collections.healthy %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <br><small>{{ post.date | date }}</small>
      </li>
    {% endfor %}
    </ul>
  {% else %}
    <p><em>Belum ada artikel dalam kategori ini.</em></p>
  {% endif %}
{% endblock %}
