
---
layout: artikel.njk
pagination:
  data: collections.kategori["loker"]
  size: 10
  alias: posts
permalink: "kategori/loker/index.html"
---

<h2>Berita Loker</h2>
{% for post in posts %}
  <div class="card">
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p><em>{{ post.data.category }} - {{ post.date | date("dd MMM yyyy") }}</em></p>
    <img src="{{ post.data.thumbnail }}" alt="" style="max-width:100%;">
    <p>{{ post.templateContent | striptags | truncate(200, true, "...") }}</p>
  </div>
{% endfor %}
