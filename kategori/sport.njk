{% extends "layouts/base.njk" %}

{% block content %}
  <h2>Artikel Kategori: {{ page.fileSlug | capitalize }}</h2>
  <ul>
    {% set posts = collections[page.fileSlug] %}
    {% if posts.length %}
      {% for post in posts %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a><br>
          <small>{{ post.date | date }}</small>
        </li>
      {% endfor %}
    {% else %}
      <p><em>Belum ada artikel dalam kategori ini.</em></p>
    {% endif %}
  </ul>
{% endblock %}
