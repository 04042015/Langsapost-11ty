---
layout: base.njk
---

<main class="container mx-auto px-4 py-8">
    <article class="max-w-4xl mx-auto">
        <header class="mb-8">
            <h1 class="text-4xl font-bold mb-4">{{ title }}</h1>
            
            <div class="flex items-center gap-4 text-gray-600 mb-6">
                <time datetime="{{ date | date('YYYY-MM-DD') }}">
                    {{ date | dateFormat }}
                </time>
                
                {% if kategori %}
                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded">
                        {{ kategori }}
                    </span>
                {% endif %}
            </div>
            
            {% if image %}
                <img src="{{ image }}" alt="{{ title }}" class="w-full h-64 object-cover rounded-lg mb-6">
            {% endif %}
        </header>
        
        <div class="prose prose-lg max-w-none">
            {{ content | safe }}
        </div>
    </article>
    
    <div class="max-w-4xl mx-auto mt-12">
        <a href="/artikel/" class="text-blue-600 hover:underline">
            ‚Üê Kembali ke Semua Artikel
        </a>
    </div>
</main>
