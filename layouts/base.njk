<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or "LangsaPost - Portal Berita Terpercaya" }}</title>
    <meta name="description" content="{{ description or 'Portal berita terpercaya LangsaPost' }}">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom CSS -->
    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>
<body class="bg-gray-50">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="text-2xl font-bold text-blue-600">LangsaPost</a>
                
                <ul class="hidden md:flex space-x-6">
                    <li><a href="/" class="hover:text-blue-600">Beranda</a></li>
                    <li><a href="/artikel/" class="hover:text-blue-600">Artikel</a></li>
                    <li><a href="/kategori/" class="hover:text-blue-600">Kategori</a></li>
                </ul>
                
                <!-- Mobile menu button -->
                <button class="md:hidden" onclick="toggleMobileMenu()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
            
            <!-- Mobile menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                <ul class="space-y-2">
                    <li><a href="/" class="block py-2 hover:text-blue-600">Beranda</a></li>
                    <li><a href="/artikel/" class="block py-2 hover:text-blue-600">Artikel</a></li>
                    <li><a href="/kategori/" class="block py-2 hover:text-blue-600">Kategori</a></li>
                </ul>
            </div>
        </nav>
    </header>

    {{ content | safe }}

    <footer class="bg-gray-800 text-white py-8 mt-12">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; 2024 LangsaPost. Semua hak dilindungi.</p>
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>
</body>
</html>
